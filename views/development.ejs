<div class="page-header">
    <div class="container">
        <h1><%= pageContent.header.title %></h1>
        <p><%= pageContent.header.subtitle %></p>
    </div>
</div>

<div class="container">    <section class="projects-section">
        <div class="content-tier-primary">
            <h2><%= pageContent.recentProjects.heading %></h2>
        </div>
        
        <div class="projects-grid">
            <% pageContent.recentProjects.projects.forEach(project => { %>
                <div class="project-card">
                    <div class="project-status <%= project.statusClass %>"><%= project.status %></div>
                    <h3><%= project.title %></h3>
                    <p><%= project.description %></p>
                    
                    <% if (project.timeline && project.timeline.length > 0) { %>
                        <div class="project-timeline">
                            <% project.timeline.forEach(item => { %>
                                <div class="timeline-item">
                                    <span class="timeline-date"><%= item.date %></span>
                                    <span class="timeline-event"><%= item.event %></span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                    
                    <% if (project.metrics && project.metrics.length > 0) { %>
                        <div class="project-metrics">
                            <% project.metrics.forEach(metric => { %>
                                <div class="metric-small">
                                    <span class="metric-value"><%= metric.value %></span>
                                    <span class="metric-label"><%= metric.label %></span>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                    
                    <a href="<%= project.link %>" class="explore-button"><%= project.linkText %></a>
                </div>
            <% }); %>
        </div>
    </section>    <section class="development-approach">
        <h2><%= pageContent.approach.heading %></h2>
        <div class="approach-grid">
            <% pageContent.approach.items.forEach(item => { %>
                <div class="approach-item">
                    <h3><%= item.title %></h3>
                    <p><%= item.description %></p>
                </div>
            <% }); %>
        </div>
    </section>
</div>
